{
  "name": "lemonade/component_currency",
  "type": "library",
  "license": "MIT",
  "description": "Lemonade Currency Conversion Library provides a reliable PHP solution for converting currencies using the Czech National Bank (CNB) as a primary source. Fully compatible with PHP 8.1 and optimized for static analysis with PHPStan.",
  "authors": [
    {
      "name": "Honza Mudrak",
      "email": "honzamudrak@gmail.com",
      "homepage": "https://github.com/johnnyxlemonade",
      "role": "Developer"
    }
  ],
  "autoload": {
    "psr-4": {
      "Lemonade\\Currency\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Lemonade\\Currency\\Tests\\": "tests/"
    }
  },
  "require": {
    "php": ">=8.1 <8.5"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5"
  },
  "scripts": {
    "test": "phpunit --configuration phpunit.xml"
  },
  "config": {
    "sort-packages": true,
    "preferred-install": "dist",
    "optimize-autoloader": true
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}